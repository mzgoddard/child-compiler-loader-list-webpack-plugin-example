$fontFamily = Verdana, arial;
$color = #E2F9FF;

body {
  box-sizing: border-box;
  margin: 0;
}

.nav {
  position: absolute;
  top: 1vmin;
  left: 0;
  right: 0;
  text-align: center;

  a {
    font-family: $fontFamily;
    color: $color;
  }
}

.image {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0;
  overflow: hidden;
  visibility: hidden;

  transition: opacity 1s, visibility 1s step-end;

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: 30%;
  }
}

.active {
  opacity: 1;
  visibility: visible;
  transition: opacity 1s, visibility 1s step-start;
}

.attribution {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 1vmin;
  text-align: center;
  color: $color;
  font-family: $fontFamily;
  font-weight: 300;

  a {
    color: $color;
  }
}
